	<version>1.1.8</version>
	<description>PLG_CONTENT_JNILLAGALLERY_XML_DESCRIPTION</description>

	<files>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<folder>media</folder>
		<filename plugin="jnillagallery">jnillagallery.php</filename>
		<filename>index.html</filename>
	</files>

	<!-- <media folder="media" destination="plg_content_jnillagallery">
	<folder>css</folder>
