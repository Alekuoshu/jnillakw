	<filename>index.html</filename>
</media> -->

<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="base_folder" type="text"
				default="images/"
				required="true"
				label="PLG_CONTENT_JNILLAGALLERY_FIELD_BASE_FOLDER_LABEL"
				description="PLG_CONTENT_JNILLAGALLERY_FIELD_BASE_FOLDER_DESC"
				/>
			</fieldset>

			<fieldset name="advanced">
				<field name="execution_side" type="list"
					default="0"
					label="PLG_CONTENT_JNILLAGALLERY_FIELD_EXECUTION_SIDE_LABEL"
					description="PLG_CONTENT_JNILLAGALLERY_FIELD_EXECUTION_SIDE_DESC"
					>
					<option value="site">PLG_CONTENT_JNILLAGALLERY_FIELD_OPTION_FRONTEDN</option>
					<option value="admin">PLG_CONTENT_JNILLAGALLERY_FIELD_OPTION_BACKEND</option>
					<option value="both">PLG_CONTENT_JNILLAGALLERY_FIELD_OPTION_BOTH_SIDES</option>
				</field>
				<field name="debug_mode" type="radio"
					class="btn-group"
					default="0"
					label="PLG_CONTENT_JNILLAGALLERY_DEBUG_MODE_LABEL"
					description="PLG_CONTENT_JNILLAGALLERY_DEBUG_MODE_DESC"
					>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
